---
import  LinkFilm  from "./LinkFilm.astro";
import type { FilmResponse } from "../pocketbase-typegen";
interface Props {
    films: FilmResponse[];
}
const {films} = Astro.props


---

{
  films.map((film, index) => (
    <>
      <LinkFilm {...film} />
      {index !== films.length - 2 ? ", " : ""}
      {index === films.length - 2 ? " et " : ""}
    </>
  ))
}